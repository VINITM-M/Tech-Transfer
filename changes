/* ===== SIDEBAR TOGGLE FIX ===== */

/* Default layout */
.p_sideNav {
  display: block;
}

/* When sidebar hidden */
body.hide .p_sideNav {
  display: none;
}

/* Fix for Home.tsx content */
section.section_container,
.p_Container_full {
  margin-left: 75px;
  transition: margin-left 0.3s ease;
}

/* When sidebar hidden */
body.hide section.section_container,
body.hide .p_Container_full {
  margin-left: 0px !important;
}
